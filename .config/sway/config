# Default config for sway
#
# Copy this to ~/.config/sway/config and edit it to your liking.
#
# Read `man 5 sway` for a complete reference.

# styles - set the folder for your theme definition file
set $theme $HOME/.config/sway/themes/matcha-green

# theme variables
include $theme/definitions

include $HOME/.config/sway/definitions.d/*.conf
include $HOME/.config/sway/inputs/*.conf
include $HOME/.config/sway/outputs/*.conf
include $HOME/.config/sway/modes/*.conf
include $HOME/.config/sway/config.d/*.conf

# user config
output * bg $HOME/Pictures/wallpaper_.jpg fill
bindsym $mod+q kill

gaps inner 0
gaps outer 0

bar {
	id default
	swaybar_command waybar
	position top
	hidden_state hide
	mode hide
	modifier Mod4
}
